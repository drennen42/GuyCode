<p><%= ENV["AWS_SECRET_ACCESS_KEY"] %></p>

<div class="container">
  <div class="row title">
    <div class="col-sm-12">
      <h1>Guy Code</h1>
    </div>
  </div>
</div>

<div class="container aside-container">
  <div class="row aside">
    <% if !current_user %>
      <div class="col-sm-12 col-sm-offset-2 col-xs-offset-1">
        <div class="col-sm-2 col-xs-5 aside-link login-link"><%= link_to "Login", "" %></div>
        <div class="col-sm-2 col-xs-5 aside-link sign-up-link"><%= link_to "Sign Up", "" %></div>
        <div class="col-sm-2 col-xs-5 aside-link"><%= link_to 'Home', root_path %></div>
        <!-- <div class="col-sm-2 col-xs-4 aside-link"><%= link_to 'Categories', categories_path %></div> -->
        <div class="col-sm-2 col-xs-5 aside-link"><%= link_to 'Articles', articles_path %></div>
      </div>

    <% else %>
      <div class="col-sm-12 col-sm-offset-3 col-xs-offset-1">
        <div class="col-sm-2 col-xs-10 aside-link"><%=  link_to "Logout", logout_path %></div>
        <div class="col-sm-2 col-xs-10 aside-link"><%= link_to 'Home', root_path %></div>
        <!-- <div class="col-sm-2 col-xs-6 aside-link"><%= link_to 'Categories', categories_path %></div> -->
        <div class="col-sm-2 col-xs-10 aside-link"><%= link_to 'Articles', articles_path %></div>
      </div>
    <% end %>
  </div>

  <div class="row aside-child">
    <div class="col-sm-12 col-offset-2">
      <div class="col-sm-8 login-form">
        <%= form_tag login_path do %>
          <div class="field">
            <%= label_tag :email %><br>
            <%= text_field_tag :email %>
          </div>
          <div class="field">
            <%= label_tag :password %><br>
            <%= password_field_tag :password %>
          </div>
          <div class="actions">
          <%= submit_tag "Login", :class => 'submit-on' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row aside-child">
    <div class="col-sm-12 col-offset-1">
      <div class="col-sm-10 sign-up-form">
        <%= form_for User.new do |f| %>
          <div class="field">
            <%= f.label :first_name %><br>
            <%= f.text_field :first_name %>
          </div>
          <div class="field">
            <%= f.label :last_name %><br>
            <%= f.text_field :last_name %>
          </div>
          <div class="field">
            <%= f.label :email %><br>
            <%= f.text_field :email %>
          </div>
          <div class="field">
            <%= f.label :password %><br>
            <%= f.password_field :password %>
          </div>
          <div class="actions">
            <%= f.submit "Sign Up", :class => 'submit-button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>


  <div class="row aside">
    <div class="row categories-row">
      <div class="col-sm-12 col-sm-offset-2 col-xs-offset-1">
        <% for category in Category.roots %>
          <div class="col-sm-1 col-xs-5 categories">
            <%= link_to category.name, category %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>