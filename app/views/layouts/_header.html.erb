<div class="container aside-container">
  <div class="row aside">
    <% if !current_user %>
      <div class="col-sm-12 col-sm-offset-1 col-xs-offset-2">
        <div class="col-sm-2 col-xs-4 aside-link login-link"><%= link_to "Login", "" %></div>
        <div class="col-sm-2 col-xs-4 aside-link sign-up-link"><%= link_to "Sign Up", "" %></div>
        <div class="col-sm-2 col-xs-4 aside-link"><%= link_to 'Home', root_path %></div>
        <div class="col-sm-2 col-xs-4 aside-link"><%= link_to 'Categories', categories_path %></div>
        <div class="col-sm-2 col-xs-4 aside-link"><%= link_to 'Articles', articles_path %></div>
      </div>

    <% else %>
      <div class="col-sm-12 col-sm-offset-2 col-xs-offset-0">
        <div class="col-sm-2 col-xs-6 aside-link"><%=  link_to "Logout", logout_path %></div>
        <div class="col-sm-2 col-xs-6 aside-link"><%= link_to 'Home', root_path %></div>
        <div class="col-sm-2 col-xs-6 aside-link"><%= link_to 'Categories', categories_path %></div>
        <div class="col-sm-2 col-xs-6 aside-link"><%= link_to 'Articles', articles_path %></div>
      </div>
    <% end %>
  </div>

  <div class="row aside">
    <div class="col-sm-12 col-offset-2">
      <div class="col-sm-8 login-form">
        <%= form_tag login_path do %>
          <div class="field">
            <%= label_tag :email %><br>
            <%= text_field_tag :email %>
          </div>
          <div class="field">
            <%= label_tag :password %><br>
            <%= password_field_tag :password %>
          </div>
          <div class="actions">
          <%= submit_tag "Login", :class => 'submit-on' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row aside">
    <div class="col-sm-12 col-offset-2">
      <div class="col-sm-8 sign-up-form">
        <%= form_for User.new do |f| %>
          <div class="field">
            <%= f.label :first_name %>
            <%= f.text_field :first_name %>
          </div>
          <div class="field">
            <%= f.label :last_name %>
            <%= f.text_field :last_name %>
          </div>
          <div class="field">
            <%= f.label :email %>
            <%= f.text_field :email %>
          </div>
          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password %>
          </div>
          <div class="actions">
          <%= f.submit "Sign Up", :class => 'submit-button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>