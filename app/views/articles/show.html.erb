<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row title">
    <div class="col-sm-12">
      <h1><%= Category.find(@article.category_id).name %>: <%= @article.title %></h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row article-body">
    <div class="col-sm-12">
      <strong>Do it:</strong>
      <br><br>
      <%= simple_format h @article.body %>
      <br>
    </div>
  </div>
</div>

<% if @article.picture != nil %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-sm-offset-1">
        <div class="col-sm-6">
          <% if [".mov", ".mp4", ".m4a"].any? { |str| @article.picture.to_s.downcase.include?(str) } %>
            <%= video_tag(@article.picture, controls: true) %>
          <% else %>
            <%= image_tag(@article.picture) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if @article.video_url != nil && @article.video_url != "" %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="video-container">
          <%= @article.embed(@article.video_url) %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if current_user && current_user.level == 4242 %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <%= form_for(@article) do |f| %>
          <%= f.label :approved %><br>
          <%= f.check_box :approved %><br>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row bottom-nav">
    <div class="col-sm-12">
      <% if current_user && current_user.level == 4242 %>
        <%= link_to 'Edit', edit_article_path(@article) %> |
      <% end %>
      <%= link_to 'Back', articles_path %>
      <!-- <%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure?' } %> -->
    </div>
  </div>
</div>